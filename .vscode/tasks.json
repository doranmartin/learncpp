{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: g++.exe build active file",
      "command": "C:\\msys64\\mingw64\\bin\\g++.exe",
      "args": [
        "-fdiagnostics-color=always",
        
        // Debug Configuration:
        "-ggdb",

        // Release Configuration:
        // "-O2",
        // "-DNDEBUG",

        // Disables compiler extensions:
        "-pedantic-errors",

        // Turns compiler warnings to the maximum:
        "-Wall",
        "-Weffc++",
        "-Wextra",
        "-Wconversion",
        "-Wsign-conversion",

        // Treats all warnings as errors:
        "-Werror",

        // Sets language standard:
        "-std=c++20",

        "${file}",
        "-o",
        "${fileDirname}\\${fileBasenameNoExtension}.exe"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    }
  ],
  "version": "2.0.0"
}
